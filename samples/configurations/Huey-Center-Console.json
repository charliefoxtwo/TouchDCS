{
    "$schema": "https://raw.githubusercontent.com/charliefoxtwo/TouchDCS/main/Configuration/Schema/LayoutConfiguration.json.schema",

    "syncAddress": "CharliesHueyCenterConsole",
    
    "properties": {
        "VHFNAV_PWR": {
            "controlType": "MultiToggleExclusive",
            "orientation": "Horizontal"
        },

        "UHF_MODE": {
            "controlType": "MultiToggleExclusive",
            "orientation": "Vertical"
        },
        "UHF_FUNCTION_bak": {
            "controlType": "MultiToggleExclusive",
            "orientation": "Vertical"
        },
        "UHF_PRESET_UP": {
            "biosProperty": "UHF_PRESET",
            "fixedStepOverride": 1,
            "ignoreSetState": true,
            "controlType": "Button"
        },
        "UHF_PRESET_DOWN": {
            "biosProperty": "UHF_PRESET",
            "fixedStepOverride": -1,
            "ignoreSetState": true,
            "controlType": "Button"
        },
        "UHF_VOL": {
            "inverted": true
        },

        "INT_MODE": {
            "controlType": "MultiToggleExclusive",
            "orientation": "Horizontal"
        },
        "INT_VOL": {
            "inverted": true
        },

        "ROCKET_PAIR_UP": {
            "biosProperty": "ROCKET_PAIR",
            "fixedStepOverride": 1,
            "ignoreSetState": true,
            "controlType": "Button"
        },
        "ROCKET_PAIR_DOWN": {
            "biosProperty": "ROCKET_PAIR",
            "fixedStepOverride": -1,
            "ignoreSetState": true,
            "controlType": "Button"
        },
        "ROCKET_PAIR": {
            "controlType": "Label"
        },

        "ROCKET_SEL": {
            "controlType": "MultiToggleExclusive",
            "orientation": "Vertical",
            "invertOrientation": true
        },
        "GUN_SEL": {
            "controlType": "MultiToggleExclusive",
            "orientation": "Vertical",
            "invertOrientation": true
        },
        "MASTER_ARM_SW": {
            "controlType": "MultiToggleExclusive",
            "orientation": "Vertical",
            "invertOrientation": true
        },

        "VHFFM_FREQ1_UP": {
            "biosProperty": "VHFFM_FREQ1",
            "fixedStepOverride": 1,
            "ignoreSetState": true,
            "controlType": "Button"
        },
        "VHFFM_FREQ1_DOWN": {
            "biosProperty": "VHFFM_FREQ1",
            "fixedStepOverride": -1,
            "ignoreSetState": true,
            "controlType": "Button"
        },
        "VHFFM_FREQ1": {
            "controlType": "Label",
            "outputType": "String"
        },
        "VHFFM_FREQ2_UP": {
            "biosProperty": "VHFFM_FREQ2",
            "fixedStepOverride": 1,
            "ignoreSetState": true,
            "controlType": "Button"
        },
        "VHFFM_FREQ2_DOWN": {
            "biosProperty": "VHFFM_FREQ2",
            "fixedStepOverride": -1,
            "ignoreSetState": true,
            "controlType": "Button"
        },
        "VHFFM_FREQ2": {
            "controlType": "Label"
        },
        "VHFFM_FREQ3_UP": {
            "biosProperty": "VHFFM_FREQ3",
            "fixedStepOverride": 1,
            "ignoreSetState": true,
            "controlType": "Button"
        },
        "VHFFM_FREQ3_DOWN": {
            "biosProperty": "VHFFM_FREQ3",
            "fixedStepOverride": -1,
            "ignoreSetState": true,
            "controlType": "Button"
        },
        "VHFFM_FREQ3": {
            "controlType": "Label"
        },
        "VHFFM_FREQ4_UP": {
            "biosProperty": "VHFFM_FREQ4",
            "fixedStepOverride": 1,
            "ignoreSetState": true,
            "controlType": "Button",
            "outputType": "None"
        },
        "VHFFM_FREQ4_DOWN": {
            "biosProperty": "VHFFM_FREQ4",
            "fixedStepOverride": -1,
            "ignoreSetState": true,
            "controlType": "Button",
            "outputType": "None"
        },
        "VHFFM_FREQ4": {
            "controlType": "Label",
            "outputType": "String"
        },
        "VHFFM_MODE": {
            "controlType": "MultiToggleExclusive",
            "orientation": "Horizontal"
        },
        "VHFFM_SQUELCH": {
            "controlType": "MultiToggleExclusive",
            "orientation": "Horizontal"
        },
        "VHFFM_VOL": {
            "inverted": true
        },

        "ADF_LOOP_LR": {
            "controlType": "MultiToggleExclusive",
            "orientation": "Horizontal"
        },
        "ADF_MODE": {
            "controlType": "MultiToggleExclusive",
            "orientation": "Horizontal"
        },
        "ADF_BAND": {
            "controlType": "MultiToggleExclusive",
            "orientation": "Horizontal"
        },
        "ADF_TUNE": {
            "controlType": "Encoder",
            "ignoreSetState": true,
            "fixedStepOverride": 800,
            "inverted": true
        },
        "ADF_GAIN": {
            "controlType": "Encoder",
            "ignoreSetState": true,
            "fixedStepOverride": 800,
            "inverted": true
        }
    }
}